<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<script type="text/javascript">

function loadRepos() {

fetch('/users/repos')
.then((response) => {
  return response.json();
})
.then((repos) => {
  for (i = 0; i < repos.length; i++) {
    var repo = repos[i]
    var selector = document.getElementById("githubRepo");
    var option = document.createElement("OPTION");
    option.value = repo.name
    option.text = repo.name
    selector.add(option)
  }
});
}
</script>


<body onload="loadRepos()">
<div class="container-fluid">
  <div class="row">


    <div class="col-sm-3" style="background-color:white;">

    <div class="card" >
      <img class="card-img-top" src=#(user.avatarURL) alt="User image">
      <div class="card-body">
        <h4 class="card-title">#(user.name)</h4>
        <a href="/logout" class="btn btn-light">Logout</a>
      </div>
    </div>


    <br>
    <h4> Add a trigger </h4>

      <form method="POST" action="/trigger/create" >
        <label for="fname">SwaggerHub URL:</label><br>
        <input type="text" id="swagger owner name" name="swaggerOwner" value="thumbworks"><br>
        <input type="text" id="swagger spec name" name="swaggerSpecName" value="DeckOfCards"><br>
        <input type="text" id="api version number" name="version" value="1.0.0"><br>
        <div id="reposelector">
          <select id="githubRepo" name="githubRepo"></select>
        </div>
        <input type="submit" value="Submit">

      </form>

    </div>

    <div class="col-sm-9" style="background-color:white;">

      

      <h3> Active triggers: </h3>

      <table class="table table-striped">
          <thead>
            <tr>
              <th>Swagger</th>
              <th>Git Repo</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>


        #for(trigger in triggers) {
          <tr>
        <td>#(trigger.swaggerRepo)</td>
        <td>#(trigger.gitRepo)</td>
        <td>
        <form action="/trigger/delete" method="POST">

                <button type="deleteButton" name="triggerID" value="#(trigger.id)" class="btn btn-outline-danger btn-sm">Delete</button>
            </form></td>
      </tr>

         
        }

    </div>

</div>
</div>
</body>
</html>
