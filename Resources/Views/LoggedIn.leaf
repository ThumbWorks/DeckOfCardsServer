<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<script type="text/javascript">

function loadRepos() {

fetch('/users/repos')
.then((response) => {
  return response.json();
})
.then((repos) => {
  for (i = 0; i < repos.length; i++) {
    var repo = repos[i]
    var selector = document.getElementById("githubRepo");
    var option = document.createElement("OPTION");
    option.value = repo.name
    option.text = repo.name
    selector.add(option)
  }
});
}
</script>


<body onload="loadRepos()">



<div class="container-fluid">
  <div class="row">

    <div class="col-sm-3" style="background-color:white;">

    <div class="card" >
      <img class="card-img-top" src=#(user.avatarURL) alt="User image">
      <div class="card-body">
        <h4 class="card-title">#(user.name)</h4>
        <a href="/logout" class="btn btn-light">Logout</a>
      </div>
    </div>


    <br>
    <h4> Add a trigger </h4>

      <form method="POST" action="/trigger/create" >
        <div class="form-group">
          <label for="fname">SwaggerHub URL:</label>
          <input type="text" name="swaggerURL" id="" class="form-control" placeholder="https://app.swaggerhub.com/apis/Thumbworks/DeckOfCards/1.0.0#free" aria-describedby="helpId">
          <small id="swagerURLID" class="text-muted">The URL in the browser when editing the yaml</small>
        </div>
       
        <div class="form-group">
          <label for="">Version:</label>
          <input type="text" name="version" id="version" class="form-control" placeholder="1.0.0" aria-describedby="helpId">

        </div>
        <div class="form-group">
          <div id="reposelector">
            <select id="githubRepo" name="githubRepo"></select>
          </div>
        </div>        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>

    <div class="col-sm-9" style="background-color:white;">

      

      <h3> Active triggers: </h3>

      <table class="table table-striped">
          <thead>
            <tr>
              <th>Swagger</th>
              <th>Git Repo</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>


        #for(trigger in triggers) {
          <tr>
        <td>#(trigger.swaggerRepo)</td>
        <td>#(trigger.gitRepo)</td>
        <td>
        <form action="/trigger/delete" method="POST">

                <button type="deleteButton" name="triggerID" value="#(trigger.id)" class="btn btn-outline-danger btn-sm">Delete</button>
            </form></td>
      </tr>

         
        }

    </div>

</div>
</div>
</body>
</html>
