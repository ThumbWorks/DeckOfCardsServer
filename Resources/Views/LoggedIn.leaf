<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<script type="text/javascript">


function deleteTriggers() {
  var checks = document.getElementsByName("deletionCheckbox")
  var deleteIDs = new Array()

  for (var i = 0; i < checks.length; i++) {
    var check = checks[i]
    if (check.checked) {
      deleteIDs.push(parseInt(check.id))
    }
  }
  
  fetch('/trigger/delete', {
      method: 'post',
      headers:{'content-type': 'application/json'},
      body:  JSON.stringify(deleteIDs)})
    .then( (response) => {
      return response.json();
    })
     .then( (data) => {
       //TODO remove the table and load them again
       loadTriggers()
       //console.log(data); // JSON data parsed by `response.json()` call
     })
}

function loadRepos() {

fetch('/users/repos')
.then((response) => {
  return response.json();
})
.then((repos) => {
  for (i = 0; i < repos.length; i++) {
    var repo = repos[i]
    var selector = document.getElementById("githubRepo");
    var option = document.createElement("OPTION");
    option.value = repo.name
    option.text = repo.name
    selector.add(option)
  }
});
}


function loadTriggers() {

fetch('/users/triggers')
.then((response) => {
  return response.json();
})
.then((triggers) => {
  for (i = 0; i < triggers.length; i++) {
    var trigger = triggers[i]
    var table = document.getElementById("triggertable");

    var row = document.createElement("TR");
    table.appendChild(row);
    row.insertCell(0).innerHTML = trigger.swaggerRepo
    row.insertCell(1).innerHTML = trigger.gitRepo
    // row[0].innerHTML.alignContent = "center"
    // row[1].innerHTML.alignContent = "center"

    var checkbox = document.createElement("INPUT");
    checkbox.setAttribute("type", "checkbox");
    checkbox.id = trigger.id
    checkbox.name = "deletionCheckbox"
    var td = document.createElement('td');
    td.style.width = '80px';
    td.style.alignContent = "center";
    td.appendChild(checkbox)
    row.appendChild(td);    
  }
});
}
</script>


<body onload="loadRepos();loadTriggers()">

<div class="container-fluid">
  <div class="row">

    <div class="col-sm-3" style="background-color:white;">

    <div class="card" >
      <img class="card-img-top" src=#(user.avatarURL) alt="User image">
      <div class="card-body">
        <h4 class="card-title">#(user.name)</h4>
        <a href="/logout" class="btn btn-light">Logout</a>
      </div>
    </div>


    <br>
    <h4> Add a trigger </h4>

      <form method="POST" action="/trigger/create" >
        <div class="form-group">
          <label for="fname">SwaggerHub URL:</label>
          <input type="text" name="swaggerURL" id="" class="form-control" placeholder="https://app.swaggerhub.com/apis/Thumbworks/DeckOfCards/1.0.0#free" aria-describedby="helpId">
          <small id="swagerURLID" class="text-muted">The URL in the browser when editing the yaml</small>
        </div>
       
        <div class="form-group">
          <label for="">Version:</label>
          <input type="text" name="version" id="version" class="form-control" placeholder="1.0.0" aria-describedby="helpId">

        </div>

        <div class="form-group">
          <label for="sel1">Select list:</label>
          <select class="form-control" id="githubRepo">
          </select>
        </div>
            
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>

    <div class="col-sm-9" style="background-color:white;">

      <h3> Active triggers: </h3>
      <form method="POST" action="/trigger/delete" >
        <table class="table table-striped" id="triggertable">
          <thead>
            <tr>
              <th>Swagger</th>
              <th>Git Repo</th>
              <th width=80px>Delete</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-11" style="background-color:white;"></div>
            <div class="col-sm-1" style="background-color:white;">
              <button type="button" onclick="deleteTriggers()" class="btn btn-outline-danger btn-sm">Delete</button>
            </div>
          </div>
        </div>
      </form>
    </div>

</div>
</div>
</body>
</html>
